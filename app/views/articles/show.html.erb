<div class="supports">
	<div class="scope d-flex flex-column ps-4 pt-5">
		<div class="pb-5">
			<a href="<%= root_path %>"><%= image_tag "backbtn.png", width: "48em" %></a>
		</div>
		<div class="pb-3">
			<h5>相关文章</h5>
		</div>
		<div class="">
			<% @title.each do |title| %>
				<p class=""><a href="<%= article_path(title[0]) %>" class="text-decoration-none text-light atitle"><%= title[1] %></a></p>
			<% end %>
		</div>
		<div class="h-100 d-flex"></div>
		<div class="d-flex justify-content-start pb-5 px-0">
			<a href="" class="px-1"><%= image_tag "weibo.png", width: "30em" %> </a>
			<a href="" class="px-1"><%= image_tag "wechat.png", width: "30em" %> </a>
			<a href="" class="px-1"><%= image_tag "twitter.png", width: "30em" %> </a>
			<a href="" class="px-1"><%= image_tag "facebook.png", width: "30em" %> </a>
		</div>
	</div>

	<div class="w-75 pt-5 px-5 text-dark content-right" style="overflow: auto;">
		<div class="content">
			<h1><%= @article.title %></h1>
			<div class="d-flex justify-content-between text-black-50">
				<div class="">
					<%= image_tag @article.user.avatar || "avatar", width: "24em", height: "24em", class: "rounded-circle" %>
					<%= @article.user.nickname || 'NICKNAME' %> &nbsp;
					<%= image_tag "read.png", width: "18em" %> <%= @article.view || 1 %>
				</div>
				<div class="">
					<%= @article.created_at %>
				</div>
			</div>
			<div class="content pt-3">
				<%= @article.content %>
			</div>
		</div>
		<div class="commont pb-5">
			<h1 class="pt-5 pb-4">评论</h1>
			<%= render 'comments/form' %>
			<%= render partial: 'comments/comment', collection: @article.comments %>
		</div>
	</div>
</div>
